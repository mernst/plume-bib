  downloadsnonlocal =
   "http://homes.cs.washington.edu/~mernst/pubs/palus-testgen-issta2011.pdf PDF;
    http://homes.cs.washington.edu/~mernst/pubs/palus-testgen-issta2011.pdf slides (PDF);
    http://homes.cs.washington.edu/~mernst/pubs/palus-testgen-issta2011.pdf slides (PowerPoint)",
  downloads = "https://code.google.com/archive/p/tpalus/ implementation",
  OPTsupersededby = "",
  category = "Test generation",
  csetags = "szhang,ybu,mernst,mernst-Testing,plse,proj-testgen",
  summary =
   "The Palus tool performs constraint-based random test generations, using
